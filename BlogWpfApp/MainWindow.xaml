<Window x:Class="BlogWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlogWpfApp"
        mc:Ignorable="d"
        Title="Lista blogów" Height="450" Width="800">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="30*" />
			<ColumnDefinition Width="40*" />
			<ColumnDefinition Width="30*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Button Name="DodajBlog"  
				Content="Dodaj blog"
				Grid.Column="1"
				Grid.Row="0"
				Margin="5" Click="ButtonDodajBlog_Click"/>

		<TextBox Grid.Row="0" Grid.Column="0" Name="MyTextBox" Margin="5" Text=""/>


		<Button Name="ButtonDostepne"  
				Content="Dostępne blogi"
				Grid.Column="2"
				Grid.Row="0"
				Margin="5" Click="ButtonDostepne_Click"/>

		<DockPanel Grid.Row="1" Grid.ColumnSpan="3">
			<ListBox Name="ListBoxBlogi">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel>
							<Label Content="{Binding BlogId}"/>
							<TextBlock
								Text="{Binding Name}"
								FontWeight="Bold" />
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</DockPanel>
	</Grid>
</Window>
